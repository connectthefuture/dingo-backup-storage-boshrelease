---
name: ssh_user
packages: []
templates:
  bin/ctl: bin/ctl
  bin/monit_debugger: bin/monit_debugger
  config/public_key.erb: config/public_key
  helpers/ctl_setup.sh: helpers/ctl_setup.sh
  helpers/ctl_utils.sh: helpers/ctl_utils.sh

provides:
- name: ssh
  type: ssh_user
  properties:
  - username
  - public_key
  - private_key

properties:
  username:
    description: username for ssh access
    default: dingo
  public_key:
    description: public key for ssh access

  private_key:
    description: corresponding private key, used by clients
